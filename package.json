{
  "name": "webext-bot",
  "version": "1.0.0",
  "private": true,
  "description": "An open-source Github Bot to report extension size change and extension version change on pull requests.",
  "author": "Amit Singh <amitsingh5198@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/amitsingh-007/webext-bot",
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "webext-bot"
  ],
  "scripts": {
    "netlify:deploy": "netlify build && netlify deploy --prod",
    "netlify:init": "netlify init",
    "start": "probot run ./index.js",
    "simulate:workflow_run.completed": "probot receive -e workflow_run -p ./test/fixtures/workflow_run.completed.json ./index.js",
    "simulate:pull_request.opened": "probot receive -e pull_request -p ./test/fixtures/pull_request.opened.json ./index.js",
    "simulate:pull_request.synchronize": "probot receive -e pull_request -p ./test/fixtures/pull_request.synchronize.json ./index.js"
  },
  "dependencies": {
    "@probot/adapter-aws-lambda-serverless": "2.0.1",
    "bytes": "3.1.0",
    "node-fetch": "2.6.1",
    "probot": "11.0.1",
    "semver": "7.3.5"
  },
  "devDependencies": {
    "netlify-cli": "3.31.16",
    "smee-client": "1.2.2"
  },
  "engines": {
    "node": ">= 10.13.0"
  }
}
