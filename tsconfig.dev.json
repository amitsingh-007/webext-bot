{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "outDir": "./dist",
    "checkJs": true,
    "strict": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["src", "api"],
  "exclude": ["**/node_modules"]
}
